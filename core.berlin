def(repeat fn(a b
  if(>=(a 1)
    cons(b repeat(dec(a) b))
    [])))

def(repeatedly fn(a f ...args
  if(>=(a 1)
    cons(apply(f args) apply(repeatedly dec(a) f args))
    [])))

def(complement fn(f
  fn(...args not(apply(f args)))))

